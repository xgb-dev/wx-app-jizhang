/* templete/tabbar/tabbar.wxss */

@import "../../font/action/iconfont.wxss";

/* common style */

.f-right {
    float: right;
}

.f-left {
    float: left;
}

.action-bar {
    width: 100%;
    height: 100rpx;
    border-top-left-radius: 60rpx;
    border-top-right-radius: 60rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    box-shadow: 0 0 50rpx 0rpx rgba(0, 0, 0, 0.08);
    z-index: 9;
}

.action-left,
.action-right {
    width: 40%;
}

.action-center {
    width: 20%;
    text-align: center;
}

.action-center icon {
    color: #FFC41E;
    font-size: 96rpx;
}

.action-item {
    float: left;
    width: 100%;
    text-align: center;
    font-size: 24rpx;
}

.action-item .font {
    color: #CCCFD8;
    font-size: 42rpx;
    margin-top: 4rpx;
}
.action-item .text{
    font-size: 24rpx;
}

.itemColor .font,.itemColor .text{
    color: #5560F6;
}