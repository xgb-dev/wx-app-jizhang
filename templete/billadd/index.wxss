/* templete/billadd/index.wxss */

@import "../../font/change/iconfont.wxss";
@import "../../font/action/iconfont.wxss";
.bill-add {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 3000rpx;
  z-index: 99;
  background: rgba(0, 0, 0, .6);
  transition: all ease-in-out 0.5s;
}

.bill-add-info-header {
  overflow: hidden;
}

.back,
.close {
  float: left;
  width: 100rpx;
  text-align: center;
  line-height: 140rpx;
  color: #5560f6;
}
.back{
  /* //transform: rotate(45deg); */
}
.back .icons,
.close .icons{
  font-size: 48rpx;
}

.center {
  width: calc(100% - 200rpx);
  text-align: center;
  float: left;
}

.show {
  top: 0;
}

.hide {
  top: 3000rpx;
}

.bill-add-back {
  color: #fff;
  margin: 42rpx 30rpx 0 30rpx;
}

.bill-add-back .icons{
  font-size: 36rpx;
  font-weight: bold;
}

.bill-add-info {
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  z-index: 10;
  overflow: hidden;
  position: absolute;
  bottom: 0;
}

.bill-add-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 30rpx;
}

.bill-add-tip {
  font-size: 28rpx;
  text-align: center;
  color: #bbb;
  line-height: 50rpx;
}

.bill-add-list {
  margin: 0 30rpx 0 30rpx;
  overflow: hidden;
}

.bill-add-item {
  width: 25%;
  background-color: #fff;
  float: left;
  margin-top: 30rpx;
}

.bill-add-item .bill-add-box {
  width: 130rpx;
  height: 130rpx;
  border-radius: 16rpx;
  margin: 0 auto;
  position: relative;
  color: #fff;
  padding: 2rpx;
  border: 2px dashed #ccc;
  /* background-color: #e9eaef; */
}
.bill-add-item .bill-add-box .bill-add-icon{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 36rpx auto;
  border-radius: 8rpx;
  background-color: #dfdfdf;
  color: #fff;
}
.bill-add-item .bill-add-box .bill-add-icon .bill-add-icon-copy{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 54rpx;
  border-radius: 8rpx;
  border-top-left-radius: 40rpx;
  background-color: #C9C9C9;
  color: #fff;
}

.bill-add-item .checked{
  background-color: #5560f6 !important;
  padding: 3px;
  border: 0;
  box-shadow: 0 0 20rpx 0rpx rgba(0, 0, 0, 0.15);
}

.bill-add-item .checked .bill-add-icon{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #8c93f5;
  margin: 36rpx auto;
  border-radius: 8rpx;
  box-shadow: 6rpx 6rpx 12rpx 0rpx rgba(0, 0, 0, 0.2);
}
.bill-add-item .checked .bill-add-icon .bill-add-icon-copy{
  background-color: #fff;
  color: #5560f6;
}
.bill-add-item .value{
  background-color: #fff;
  padding: 3px;  
  border: 0;
  box-shadow: 0 0 20rpx 0rpx rgba(0, 0, 0, 0.15) !important;
}

.bill-add-box .bill-value-icon{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 50rpx;
  border: 2px solid #fff;
  box-shadow: 0 0 20rpx 0rpx rgba(0, 0, 0, 0.15) !important;
}

.bill-add-box .bill-value-icon .iconfont{
  font-size: 46rpx;
  line-height: 80rpx;
}

.bill-add-box .has-value{
  width: 40rpx;
  height: 40rpx;
  background-color: #5560f6;
  color: #fff;
  border-top-left-radius: 30rpx;
  border-bottom-right-radius: 16rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  line-height: 24rpx;
}
.bill-add-box .has-value .icons{
  font-size: 52rpx;
}
.bill-value-date{
  line-height: 140rpx;
  text-align: center;
  font-weight: bold;
  color: #fff;
}
.checked .bill-value-date{
  color: #fff;
}
.checked .has-value{
  background-color: #fff;
  color: #5560f6;
}
.bill-add-item .checked::after{
  content: '';
    width: 0;
    height: 0;
    border-top: 20rpx solid #5560f6;
    border-bottom: 20rpx solid transparent;
    border-right: 20rpx solid transparent;
    border-left: 20rpx solid transparent;
    position: absolute;
    bottom: -30rpx;
    left: 54rpx;
}
.bill-add-item .checked + .bill-add-text{
  color: #5560f6;
}
.bill-add-item .bill-add-text {
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
}

/* input */

.bill-add-area {
  width: 100%;
  /* background-color: #e9eaef; */
  background-color: #3E403F;
  border-top-right-radius: 40rpx;
}

.bill-add-area-main {
  padding: 24rpx;
  overflow: hidden;
}

.bill-add-way,
.bill-add-voice {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  text-align: center;
  line-height: 70rpx;
  float: left;
  background-color: #fff;
}

.bill-add-way {
  background-color: #ffc41e;
  color: #fff;

}
.bill-add-way.in{
  background-color: #0396FF;
}

.bill-add-voice {
  font-size: 32rpx;
  background-image: linear-gradient(135deg, #ABDCFF 10%, #0396FF 100%);
  color: #fff;
}

.bill-add-input {
  float: left;
  width: calc(100% - 300rpx);
  margin-left: 20rpx;
  height: 70rpx;
  background-color: #fff;
  border-top-right-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  line-height: 70rpx;
}

.input-value {
  font-size: 28rpx;
  color: #7E818A;
  margin-left: 20rpx;
}

.input-info {
  margin-top: 14rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  display: none;
}

.input-show {
  display: block;
}

.bill-add-amount {
  float: left;
  width: 120rpx;
  height: 70rpx;
  margin: 0 10rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.hide {
  /* display: none; */
  height: 0 !important;
}

.icon-list {
  overflow: hidden;
}

.icon-item {
  width: 20%;
  float: left;
  margin-top: 30rpx;
}

.icon-item-box {
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 28rpx;
  color: #fff;
}
.icon-item-box .iconfont{
  font-size: 40rpx;
}
/* .icon-item:nth-child(odd) .icon-item-box{
  background-color: #0396FF;
}
.icon-item:nth-child(even) .icon-item-box{
  background-color: #0396FF;
} */
.icon-item-text {
  text-align: center;
  line-height: 56rpx;
  font-size: 24rpx;
  color: #fff;
}

.page-section-show{
  display: block;
}
.page-section-hide{
  display: none;
}
.page-section {
  overflow: hidden;
  background-color: #3A3C3B;
  transition: all ease-out 0.5s;
}

.ellipsis {
  width: 180rpx;
  height: 70rpx;
  text-align: center;
  border-radius: 36rpx;
  line-height: 70rpx;
  margin: 20rpx auto;
  color: #fff;
  background-color: #474948;
  border: 1px solid #505253;
}
.tip-alert{
  position: absolute;
  left: -500rpx;
  /* display: none; */
  transition: all ease-in-out 0.5s;
}
.tip-show{
  transition: all ease-in-out 0.5s;
  /* display: block; */
  left: 0;
}