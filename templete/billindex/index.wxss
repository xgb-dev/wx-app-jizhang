/* list style */

.list {
    background: #fff;
    border-radius: 40rpx;
    box-shadow: 0 0 50rpx 0rpx rgba(0, 0, 0, 0.08);
    padding: 0 30rpx;
    margin: 30rpx;
}

.list .item {
    overflow: hidden;
    padding: 28rpx 0;
    position: relative;
}

.list .item:before {
    content: '';
    height: 1px;
    width: calc(100% - 100rpx);
    background: #f1f1f1;
    transform: scale(1, 0.5);
    position: absolute;
    bottom: 0;
    left: 100rpx;
}

.item .b-icon-box {
    width: 100rpx;
}

.b-icon-circle {
    width: 80rpx;
    height: 80rpx;
    background: #5560f7;
    border-radius: 32rpx;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
}

.b-icon-circle .iconfont{
    font-size: 38rpx;
}
.b-text-box {
    width: calc(100% - 100rpx);
    overflow: hidden;
    /* border-bottom: 1px solid #ccc; */
}

.item-remarks {
    font-size: 32rpx;
    color: #444;
    font-weight: 500;
}

.item-date {
