/* 账本 */
.scroll-view-item_H {
    display: inline-block;
    width: 140rpx;
    height: 160rpx;
    text-align: center;
    margin-left: 30rpx;
    margin-right: 16rpx;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    font-size: 26rpx;
    border-radius: 16rpx;
    position: relative;
    color: #fff;
    box-shadow: 0rpx 10rpx 10rpx 0 rgba(0, 0, 0, .1);
    background-image: linear-gradient(135deg, #EBEBEB 5%, #a1a1a1 100%);
}
.scroll-view-item_H .font-box .font{
    font-size: 60rpx;
    line-height: 80rpx;
    margin-top: 20rpx;
}

.scroll-view-item_H .iBookmark{
    font-size: 36rpx;
    position: absolute;
    top: -24rpx;
    right: 10rpx;
    color: #f1f1f1;
}
.scroll-view-item_H .text{
    line-height: 40rpx;
}
.scroll-view_H .lastBook{
    background-image: linear-gradient( 135deg, #FFD3A5 10%, #FD6585 100%);
}
.scroll-view_H .checked {
    background-image: linear-gradient(135deg, #7393FF 5%, #4854F8 100%);
    box-shadow: 0rpx 10rpx 20rpx 0 rgba(0, 0, 0, .2);
    font-size: 24rpx;
    transform: scale(1.2);

}
.scroll-view_H .checked .iBookmark{
    color: #FED465;
}

.scroll-view_H .checked::after {
    content: '';
    width: 0;
    height: 0;
    border-top: 10px solid transparent;
    border-bottom: 10px solid #5560f7;
    border-right: 10px solid transparent;
    border-left: 10px solid transparent;
    position: absolute;
    bottom: -30rpx;
    left: 54rpx;
}

